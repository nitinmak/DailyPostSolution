<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frameMainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/bussiness_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00062E"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingLeft="@dimen/_70sdp"
        android:text="Altaf Mansuri lamgari"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <com.sendpost.dreamsoft.View.ShapesImage
        android:id="@+id/bussiness_pic"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/circle_gradient"
        app:shapeDrawable="@drawable/a_frame_shape_oval" />

    <LinearLayout
        android:id="@+id/bt1"
        android:background="#00062E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:paddingVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/whatsapp_tv"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_whatsapp"
                android:drawableTint="@color/white"
                android:drawableRight="@drawable/ic_edit_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:paddingVertical="@dimen/_5sdp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/number_tv"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_call"
                android:drawableTint="@color/white"
                android:drawableRight="@drawable/ic_edit_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:paddingVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/website_tv"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_web"
                android:drawableTint="@color/white"
                android:drawableRight="@drawable/ic_edit_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>