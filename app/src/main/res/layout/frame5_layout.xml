<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frameMainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/_220sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:paddingVertical="@dimen/_2sdp"
            android:background="@drawable/a_fram_right_bottom_cut"
            android:backgroundTint="@color/blue_color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_email"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/email_tv"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_edit_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:paddingVertical="@dimen/_2sdp"
            android:background="@drawable/a_fram_right_bottom_cut"
            android:backgroundTint="@color/orange_color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_call"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/number_tv"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_edit_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:paddingVertical="@dimen/_2sdp"
            android:background="@drawable/a_fram_right_bottom_cut"
            android:backgroundTint="#673AB7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_web"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/website_tv"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_edit_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

    <com.sendpost.dreamsoft.View.ShapesImage
        android:id="@+id/bussiness_pic"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/circle_gradient"
        app:shapeDrawable="@drawable/a_frame_shape_oval" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/bussiness_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>