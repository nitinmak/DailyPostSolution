<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frameMainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_20sdp">

        <TextView
            android:id="@+id/bussiness_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_37sdp"
            android:drawableRight="@drawable/ic_edit_frame"
            android:drawableTint="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/hindi_"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

    <com.sendpost.dreamsoft.View.ShapesImage
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/bussiness_pic"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/gradiant_bg5"
        app:shapeDrawable="@drawable/a_frame_shape_oval" />


    <LinearLayout
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/instagram_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_instagram"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_above="@id/bottom_lay"
        android:layout_marginRight="@dimen/_200sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/full_rounded_bg"
        android:backgroundTint="#060050" />

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:background="#02003C"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_edit_frame"
            android:drawableTint="@color/white"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/frame_design"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_40sdp"/>
</RelativeLayout>