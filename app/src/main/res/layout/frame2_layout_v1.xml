<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frameMainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sendpost.dreamsoft.View.ShapesImage
        android:id="@+id/bussiness_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/rounded_bg"
        app:shapeDrawable="@drawable/a_frame_shape_oval" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bussiness_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_edit_frame"
            android:drawableTint="#3a4eff"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/demo_insta"
            android:textColor="#3a4eff"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/frame2_ui_v2"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_location"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawablePadding="5dp"
                android:drawableTint="#ffff"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_address"
                android:textColor="#ffff"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:paddingLeft="@dimen/_45sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_call"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawablePadding="5dp"
                android:drawableTint="#ffff"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_number"
                android:textColor="#ffff"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>