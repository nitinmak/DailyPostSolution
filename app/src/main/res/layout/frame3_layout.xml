<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/frameMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A6FF"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp">

            <TextView
                android:id="@+id/bussiness_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_insta"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_location"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_address"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.sendpost.dreamsoft.View.ShapesImage
            android:id="@+id/bussiness_pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_icon"
            app:shapeDrawable="@drawable/a_frame_shape_oval" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00A6FF"/>
            <View
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00A6FF"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:paddingLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/right_round_bg"
                android:backgroundTint="#00A6FF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <TextView
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawableTint="@color/white"
                    android:drawablePadding="5dp"
                    android:id="@+id/email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_email"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:textSize="@dimen/_13sdp"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:drawableLeft="@drawable/ic_web"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawableTint="@color/white"
                    android:drawablePadding="5dp"
                    android:id="@+id/website_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_number"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/left_round_top"
                android:backgroundTint="#00A6FF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_call"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_insta"
                        android:textColor="@color/white"
                        android:drawableRight="@drawable/ic_edit_frame"
                        android:drawableTint="@color/white"
                        android:textSize="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_centerInParent="true"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>