<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frameMainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sendpost.dreamsoft.View.ShapesImage
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/bussiness_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/rounded_bg"
        app:shapeDrawable="@drawable/ic_frame_shape_square"/>

    <TextView
        android:layout_margin="@dimen/_15sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/bussiness_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_edit_frame"
        android:drawableTint="#FFFFFF"
        android:text="@string/demo_insta"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red_color_picker"/>
        <View
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red_color_picker"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red_color_picker"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/right_round_bg"
            android:backgroundTint="#FF003C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <TextView
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_email"
                android:textColor="@color/white"
                android:maxLines="1"
                android:textSize="@dimen/_13sdp"
                android:ellipsize="end"
                android:layout_centerInParent="true"/>
            <TextView
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:id="@+id/number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_number"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerInParent="true"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/left_round_bottom"
            android:backgroundTint="#FF003C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/instagram_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_insta"
                    android:textColor="@color/white"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_instagram"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawableTint="@color/white"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/youtube_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_youtube"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawableTint="@color/white"
                    android:text="@string/demo_insta"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="10dp"
                    android:layout_centerInParent="true"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>