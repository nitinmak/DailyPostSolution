<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="#19000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/lay_bottom"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_3sdp">

            <TextView
                android:id="@+id/username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="#000000"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_insta"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_alignParentBottom="true"
            android:background="#FF6F00"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_100sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableTint="@color/white"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/demo_insta"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/instagram_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_instagram"
                        android:drawableRight="@drawable/ic_edit_frame"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/white"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/demo_insta"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/youtube_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_youtube"
                        android:drawableRight="@drawable/ic_edit_frame"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/white"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/demo_insta"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_y" />

        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_above="@+id/la2"
            android:layout_alignParentRight="true"
            android:background="@drawable/a_frame_shape_oval"
            android:backgroundTint="@color/white" />

        <RelativeLayout
            android:id="@+id/frameMainLayout"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/la2">

            <com.sendpost.dreamsoft.View.ShapesImage
                android:layout_centerInParent="true"
                android:id="@+id/bussiness_pic"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:shapeDrawable="@drawable/a_frame_shape_oval" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/la2"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <TextView
                android:id="@+id/bussiness_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_insta"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>