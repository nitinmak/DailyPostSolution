<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:background="#19000000" />

    <RelativeLayout
        android:paddingBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:background="@drawable/full_rounded_bg">
            <TextView
                android:id="@+id/bussiness_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/ic_edit_frame"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/demo_insta"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawableTint="@color/white"
                    android:drawablePadding="5dp"
                    android:id="@+id/email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_web"
                    android:drawableRight="@drawable/ic_edit_frame"
                    android:drawableTint="@color/white"
                    android:drawablePadding="5dp"
                    android:id="@+id/website_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_number"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>